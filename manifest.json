{

    "manifest_version": 2,
    "name": "HU Pomodoro",
    "version": "1.0",
  
    "description": "Adds a timer to all webpages for students to track stduying time",
  
    "icons": {
      "32": "clock.png"
    },

    "browser_action": {
        "default_title": "HU Pomodoro",
        "default_popup": "popup/popup.html",
        "default_icon" : "clock.png"
      },
    
    "permissions": [
      "storage"
    ],
  
    "content_scripts": [
      {
        "matches": ["*://*.mozilla.org/*"]
      }
    ]
  
  }