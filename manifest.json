{

    "manifest_version": 2,
    "name": "HU Pomodoro",
    "version": "1.0",
  
    "description": "Adds a timer to all webpages for students to track stduying time",
  
    "icons": {
      "32": "clock.png"
    },

    "background":
      {
  		"persistent": true,
  		"scripts": ["./popup/timer.js"]
	  },

    "browser_action": {
        "default_title": "HU Pomodoro",
        "default_popup": "popup/popup.html",
        "default_icon" : "clock.png"
      },
    
	"content_scripts": [
      {
        "matches": ["<all_urls>"]
      }
    ],

    "permissions": [
      "storage"
    ]   
  
  }